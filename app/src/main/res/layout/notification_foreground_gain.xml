<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="17dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notiIcon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            app:tint="#AE905E"
            android:src="@drawable/ic_monetization_on_24px" />

        <TextView
            android:id="@+id/notiName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-0.5dp"
            android:textColor="#AE905E"
            android:textSize="11dp"
            android:text="GoldenTime"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/testLineLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textDefaultColor"
            android:textSize="10sp"
            android:text="@string/test1"/>

        <TextView
            android:id="@+id/test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lossColor"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textSize="10sp"
            android:text="@string/test2"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstLineLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notiUsageTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textDefaultColor"
            android:textSize="12dp"
            android:text="00-00시 사용시간@@: "/>

        <TextView
            android:id="@+id/notiUsageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textDefaultColor"
            android:textSize="12dp"
            android:text="00:00"/>

        <TextView
            android:id="@+id/notiBorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textDefaultColor"
            android:textSize="12dp"
            android:text="  ||  "/>

        <TextView
            android:id="@+id/notiTotalStatistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textDefaultColor"
            android:textSize="12dp"
            android:text="오늘 획득(누적 획득):  "/>

        <TextView
            android:id="@+id/notiTotalGainGoldStatisticsVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lossColor"
            android:textStyle="bold"
            android:textSize="10sp"
            android:text="@string/todayGainTotalLoss"/>


    </LinearLayout>

