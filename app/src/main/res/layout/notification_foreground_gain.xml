    <LinearLayout
        android:id="@+id/secondLineLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notiThisIncentive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textDefaultColor"
            android:textSize="10sp"
            android:text="@string/ifMissionSuccess"/>

        <TextView
            android:id="@+id/notiThisIncentiveVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lossColor"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textSize="10sp"
            android:text="@string/notiThisGainIncentiveString"/>


        <TextView
            android:id="@+id/notiThisSuccessRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textDefaultColor"
            android:layout_marginStart="5dp"
            android:textSize="10sp"
            android:text="@string/notiThisSuccessRateString"/>
